{
  "name": "Environnement IoT Multi-Repo",
  // Image de base universelle recommandée
  "image": "mcr.microsoft.com/devcontainers/universal:latest", 

  // Définit explicitement l'utilisateur 'codespace' pour résoudre les problèmes de permission
  "remoteUser": "codespace", 
  
  // Commandes exécutées automatiquement lors de la création du Codespace
  "onCreateCommand": [
    // 1. Installer les dépendances du Backend (dépôt principal)
    "npm install",
    
    // 2. Installer les dépendances du Frontend
    "cd ../poulailler-iot-frontend && npm install",

    // 3. Installer les dépendances du Mobile
    "cd ../poulailler-iot-mobile && npm install"
  ],

  // Configuration des ports
  "portsAttributes": {
    "5000": { 
      "label": "API Backend (Node.js)", 
      "onAutoForward": "notify" 
    },
    "8100": { 
      "label": "Ionic/Frontend App", 
      "onAutoForward": "openBrowser" 
    }
  },

  "forwardPorts": [5000, 8100],

  // Extensions VS Code recommandées
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.node-js-for-typescript",
        "ms-azuretools.vscode-docker",
        "GitHub.vscode-github-actions"
      ]
    }
  }
}
